#include <iostream> 
using namespace std; 
int isPrime(int n) { 
if (n < 2) return false; 
for (int i = 2; i * i <= n; i++) if (n % i == 0) return false; 
return true; 
} 
int nextPrime(int n) { 
while (!isPrime(++n)); 
return n; 
} 
void printFactors(int n) { 
cout << "Factors: "; 
for (int i = 1; i <= n / 2; i++) if (n % i == 0) cout << i << " "; 
cout << n << "\n"; 
} 
int main() { 
int n; 
cout << "Enter a positive number: "; 
cin >> n; 
if (n < 1) { 
cout << "Invalid input.\n"; 
return 1; 
} 
if (isPrime(n)) { 
cout << n << " is prime. Next prime is : " << nextPrime(n) << "\n"; 
} else { 
cout << n << " is not prime. "; 
printFactors(n); 
} 
return 0;}
