#include <iostream> 
using namespace std; 
int main() { 
int n; 
cout << "Enter the size of the array: "; 
cin >> n; 
int arr[n]; 
cout << "Enter " << n << " elements: "; 
for (int i = 0; i < n; ++i) cin >> arr[i]; 
cout << "Reversed array: "; 
for (int i = n - 1; i >= 0; --i) cout << arr[i] << " "; 
cout << endl; 
for (int i = 0; i < n - 1; ++i) { 
for (int j = i + 1; j < n; ++j) { 
if (arr[i] > arr[j]) swap(arr[i], arr[j]); 
} 
} 
int second_smallest = (n > 1 && arr[0] != arr[1]) ? arr[1] : -1; 
int second_largest = (n > 1 && arr[n - 1] != arr[n - 2]) ? arr[n - 2] : -1; 
cout << "Second smallest element: " << (second_smallest != -1 ? 
to_string(second_smallest) : "Not found") << endl; 
cout << "Second largest element: " << (second_largest != -1 ? 
to_string(second_largest) : "Not found") << endl; 
return 0; 
} 
